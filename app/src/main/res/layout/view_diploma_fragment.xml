<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.mainui.ManageDiploma.ViewDiplomaFragment">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some Course"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/application_deadline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Application Deadline: "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/application_deadline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="3/10/2015"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/application_deadline_title"
            app:layout_constraintTop_toBottomOf="@id/application_deadline_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fees_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Diploma Fees: "
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/application_deadline_text"
            app:layout_constraintTop_toBottomOf="@id/application_deadline_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fees_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/fees_title"
            app:layout_constraintTop_toBottomOf="@id/fees_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dates_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Diploma Academic Year: "
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/fees_text"
            app:layout_constraintTop_toBottomOf="@id/fees_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dates_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="360dp"
            android:textSize="16sp"
            android:text="course start and end dates"
            app:layout_constraintStart_toStartOf="@id/dates_title"
            app:layout_constraintTop_toBottomOf="@id/dates_title" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/outline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Outline: "
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/dates_text"
            app:layout_constraintTop_toBottomOf="@id/dates_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/outline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="360dp"
            android:textSize="16sp"
            android:text="some interesting outline"
            app:layout_constraintStart_toStartOf="@id/outline_title"
            app:layout_constraintTop_toBottomOf="@id/outline_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
