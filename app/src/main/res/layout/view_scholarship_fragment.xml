<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.mainui.ManageCourses.ViewCourseInfoFragment">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some Course"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/eligibility_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Eligibility"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/eligibility_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxWidth="360dp"
            android:text="O Levels"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/eligibility_title"
            app:layout_constraintTop_toBottomOf="@id/eligibility_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/benefits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Benefits:"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/eligibility_text"
            app:layout_constraintTop_toBottomOf="@id/eligibility_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/benefits_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="360dp"
            android:text="We pay you to study ofc"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/benefits_title"
            app:layout_constraintTop_toBottomOf="@id/benefits_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bond_period_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Bond Period: "
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/benefits_text"
            app:layout_constraintTop_toBottomOf="@id/benefits_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/bond_period_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="360dp"
            android:text="4 years"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/bond_period_title"
            app:layout_constraintTop_toBottomOf="@id/bond_period_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/outline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Outline: "
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/bond_period_text"
            app:layout_constraintTop_toBottomOf="@id/bond_period_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/outline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="360dp"
            android:text="blablabla"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/outline_title"
            app:layout_constraintTop_toBottomOf="@id/outline_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
